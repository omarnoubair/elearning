.surveys-list {
margin: 0;
padding: 0;
list-style: none;
}

.surveys-list .survey-row {
padding: 22px 20px;
margin: 0;
border-bottom: 1px solid #ebebeb;
}
.surveys-list .survey-row .row-left {
float: left;
width: 45px;
text-align: center;
}

.surveys-list .survey-row .row-content {
padding: 0 100px 0 60px;
}

.surveys-list .survey-row .row-content .info {
display: block;
color: #a1adb2;
font-size: 12px;
margin-top: 5px;
}
.surveys-list .survey-row .row-left {

width: 76px;
margin-right: 18px;
}
.surveys-list .survey-row .closed {
background-color: #CC3333;

}
.surveys-list .survey-row .open {
background-color: #33CC37;
}
.surveys-list .survey-row .row-left .number_of_vote {
display: block;
color: #FFFFFF;
font-size: 13px;
font-weight: 600;
margin: 3px;
}




.glyphicon { margin-right:10px; }


.dropdown-menu {
  position: absolute;
  top: 100%;
  left: -126px;
  z-index: 1000;
  display: none;
  float: right;
  min-width: 160px;
  padding: 5px 0;
  margin: 2px 0 0;
  font-size: 14px;
  text-align: left;
  list-style: none;
  background-color: #fff;
  -webkit-background-clip: padding-box;
          background-clip: padding-box;
  border: 1px solid #ccc;
  border: 1px solid rgba(0, 0, 0, .15);
  border-radius: 4px;
  -webkit-box-shadow: 0 6px 12px rgba(0, 0, 0, .175);
          box-shadow: 0 6px 12px rgba(0, 0, 0, .175);
  width: 254px;
  height: 244px;
}

